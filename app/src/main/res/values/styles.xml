<resources>

    <!-- Base application theme. -->
    <style name="Theme.Speech" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat"></style>

    <style name="MyTheme.NoActionBar" parent="Theme.AppCompat">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>f
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="MyTheme.NoActionBar1">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">#bababa</item>
        <!-- Label color in TRUE state and bababa color FALSE and TRUE State -->
        <item name="colorControlNormal">#28B5A8</item>
        <item name="colorControlActivated">#28B5A8</item>
        <item name="colorControlHighlight">#28B5A8</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
